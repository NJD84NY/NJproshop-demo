{
  "name": "njproshop-v2",
  "version": "1.0.0",
  "description": "bulding eCommerc application with MERN stack",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node backend/seeder.js",
    "data:destroy": "node backend/seeder.js -d",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NJD84NY/NJproshop-demo.git"
  },
  "author": "Nejad Yazdani",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NJD84NY/NJproshop-demo/issues"
  },
  "homepage": "https://github.com/NJD84NY/NJproshop-demo#readme",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.7",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.16.0",
    "mongoose": "^8.14.1",
    "multer": "^2.0.0",
    "react-helmet-async": "^2.0.5",
    "stripe": "^18.1.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "nodemon": "^3.1.10"
  }
}
